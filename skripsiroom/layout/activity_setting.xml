<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menusetting.SettingActivity"
    android:background="@color/orange">

    <TextView
        android:id="@+id/settingdatagambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Gambar yang ditambahkan"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:fontFamily="@font/galindo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settinggambarfavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gambar Favorit"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:padding="20dp"
        android:fontFamily="@font/galindo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingdatagambar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="63dp"
        android:layout_height="67dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_24"
        app:tint="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="67dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/settinggambarfavorite"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/ic_baseline_favorite_24"
        app:tint="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>